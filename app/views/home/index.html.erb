<% content_for :head do %>
  <h1>Is the Hammersmith bridge barrier operational today?</h1>
  <% if @today_status %>
    <em class="status main_status <%= status_class(@today_status) %>"><%= status_class(@today_status).capitalize %></em>
  <% else %>
    <em class="status main_status maybe">Maybe</em>
  <% end %>
<% end %>

<h2>What about the previous days?</h2>
<ol class="clearfix">
  <% @statuses.each do |s| %>
    <li><em class="status <%= status_class(s) %>"><%= status_class(s).capitalize %></em><span class="date"><%= s.date.strftime("%d/%m/%Y") %></span><span class="time"><%= s.time.strftime("%I:%M%p").downcase! %></span></li>
  <% end %>
</ol>
<h2>Stats since records begun <small>(<%= @oldest_status.date.strftime("%m/%Y") %>)</small> <small><%= link_to('view all', statuses_path) %></small></h2>
<ul class="clearfix">
  <li class="status no"><em>No</em><span><%= number_to_percentage(@no_percent, :precision => 2, :strip_insignificant_zeros => true) %></span></li>
  <li class="status yes"><em>Yes</em><span><%= number_to_percentage(@yes_percent, :precision => 2, :strip_insignificant_zeros => true) %></span></li>
</ul>